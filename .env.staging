APP_NAME="Pizzeria API"
APP_ENV=staging
APP_KEY=base64:YOUR_BASE64_ENCODED_32_CHAR_SECRET_KEY_HERE
APP_DEBUG=false
APP_URL=https://staging.pizzeria-api.com

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=staging-db.example.com
DB_PORT=5432
DB_DATABASE=pizzeria_staging
DB_USERNAME=pizzeria_user
DB_PASSWORD=YOUR_STAGING_PASSWORD

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=cookie

REDIS_HOST=staging-redis.example.com
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.staging.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@staging.example.com
MAIL_PASSWORD=YOUR_STAGING_EMAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@staging.example.com
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

SANCTUM_SKIPPED_MIDDLEWARE=throttle:api

VITE_APP_NAME="${APP_NAME}"
